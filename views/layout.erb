<!doctype HTML>
<html>
  <head>
    <meta charset="utf-8" />
    <title>ERB Layout</title>
  </head>
  <body>
    <p>The current ERB user is <%= @user %></p>
    <ul>
      <li>
        <a href="/sessions/new">New Session</a>
      </li>
    </ul>
    <% if @message %>
      <p>You have a message:</p>
      <blockquote>
        <%= @message %>
      </blockquote>
    <% end %>
    <%= yield %>
  </body>
</html>